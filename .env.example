# Application Configuration
APP_NAME=webui-deployment-system-manager
APP_VERSION=1.1.0

# AWS Configuration
AWS_PROFILE=gemini-pro_ck
AWS_REGION=ap-northeast-1

# S3 Buckets
BUILD_ARTIFACTS_BUCKET=build-artifacts-bucket
DEPLOY_WEBUI_BUCKET=deploy-webui-bucket

# Server Configuration
PORT=3015
NODE_ENV=development
LOG_LEVEL=info

# Session Configuration
SESSION_SECRET=your-secret-key-change-this-in-production

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:3015/auth/google/callback
ALLOWED_EMAIL_DOMAINS=gmail.com
# Optional: Comma-separated list of allowed email addresses (leave empty to allow all)
ALLOWED_EMAILS=

# CORS Configuration
# Comma-separated list of allowed origins (leave empty to allow all in development)
ALLOWED_ORIGINS=http://localhost:3015,http://127.0.0.1:3015

# Deployment Configuration
# Default deployment options
DEFAULT_CLEAR_BEFORE_DEPLOY=true
DEFAULT_EXTRACT_ZIP=true
DEFAULT_TARGET_PREFIX=

# High-Speed Upload Configuration
UPLOAD_CONCURRENCY=10           # 並行上傳數量（建議 5-20）
UPLOAD_PART_SIZE=10485760       # 分段上傳大小 10MB (bytes)
USE_ACCELERATE_ENDPOINT=false   # 是否使用 S3 Transfer Acceleration

# Docker Registry (optional, for multi-arch builds)
DOCKER_REGISTRY=
DOCKER_IMAGE_NAME=wds-manager
BUILD_PLATFORMS=linux/amd64,linux/arm64

# Config Files Auto-Copy Configuration
# Define which config files should be copied to which game directories
# Format: CONFIG_MAPPING_<TYPE>=<games>
# Where <games> is a comma-separated list of game names or '*' for all games in that category

# Hash games config mapping
# Copy hashconfig.json to all hash games, or specify individual games
CONFIG_MAPPING_HASH=*
# Example: CONFIG_MAPPING_HASH=MultiPlayerAviator,MultiPlayerCrash,StandAloneDice

# Bingo games config mapping
CONFIG_MAPPING_BINGO=*
# Example: CONFIG_MAPPING_BINGO=ArcadeBingo,BonusBingo,CaribbeanBingo

# Arcade games config mapping
CONFIG_MAPPING_ARCADE=*
# Example: CONFIG_MAPPING_ARCADE=MultiPlayerBoomersGR,StandAloneForestTeaParty

# Custom config file mappings (optional)
# Format: CONFIG_CUSTOM_<NAME>=<source_file>:<target_games>
# Example: CONFIG_CUSTOM_SPECIAL=config/special.json:GameA,GameB,GameC
