# Application Configuration
APP_NAME=webui-deployment-system-manager
APP_VERSION=1.1.0

# AWS Configuration
AWS_PROFILE=gemini-pro_ck
AWS_REGION=ap-northeast-1

# S3 Buckets
BUILD_ARTIFACTS_BUCKET=build-artifacts-bucket
DEPLOY_WEBUI_BUCKET=deploy-webui-bucket

# Server Configuration
PORT=3015
NODE_ENV=development
LOG_LEVEL=info

# Session Configuration
SESSION_SECRET=your-secret-key-change-this-in-production

# Deployment Configuration
# Default deployment options
DEFAULT_CLEAR_BEFORE_DEPLOY=true
DEFAULT_EXTRACT_ZIP=true
DEFAULT_TARGET_PREFIX=

# High-Speed Upload Configuration
UPLOAD_CONCURRENCY=10           # 並行上傳數量（建議 5-20）
UPLOAD_PART_SIZE=10485760       # 分段上傳大小 10MB (bytes)
USE_ACCELERATE_ENDPOINT=false   # 是否使用 S3 Transfer Acceleration

# Docker Registry (optional, for multi-arch builds)
DOCKER_REGISTRY=
DOCKER_IMAGE_NAME=wds-manager
BUILD_PLATFORMS=linux/amd64,linux/arm64
